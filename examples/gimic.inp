# NEW INPUT

	rerun=off
	title="CO2"
	basis="mol"
	density="XDENS"
	spherical=off
	debug=5
	calc=[cdens, integral, divj]

	cdens {
		jtensor="JTENSOR"
		jvector="JVECTOR"
		orthogonal_magnet=off
		magnet=[1.0, 0.0, 0.0]
		scale_vectors=1.0
		diamag=on
		paramag=on
		plot(on) {
			plots=[1]
			vector="JVEC"
			modulus="JMOD"
			projection="JPRJ"
			#nvector="NJVEC"
			gopenmol="jmod.plt"
		}
	}
	
	grid(base) { 
		type=even
		origin=[-4.0, 0.0, -4.0]
		ivec=[1.0, 0.0, 0.0]
		jvec=[ 0.0, 0.0, 1.0]
		kvec=[0.0,1.0,0.0] # optional, deduced from i x j
		lenghts=[10.0, 10.0, 0.0]
		spacing=[0.5, 0.5, 0.5]
		angle=0.0
#         map=[-4.0, -4.0] # delete, deduce from lenghts
		gridplot=15 # wht?
#     file=apapa
	}

