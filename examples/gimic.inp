	integral {
		interpolate=off
		lip_order=5
		grid(bond) {      
			type=gauss
			origin=[0.0, 1.0, 1.096]
			v1=[0.0, 0.0, 0.0]
			v2=[0.0, 0.0, 2.192328]
			l3=1.096
			gauss_points=[9,9,0]
			grid_points=[90,90,0]
			height=[5.0, 5.0]
			width=[5.0, 5.0]
			gridplot=15
		}
	}

