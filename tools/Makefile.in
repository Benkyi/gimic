topdir:=..
srcdir:=. 
 
include $(topdir)/make.config

# Name of program/library to make
INST_PROGS:=
INST_LIBS:=Atom.py Const.py Elements.py QCTools.py
INST_SCRIPTS:=MOL2mol.sh turbo2mol.py 
INST_INCLUDES:=
INST_DATA:=

include $(topdir)/make.rules

all: $(INST_PROGS) $(INST_SCRIPTS) 

$(scriptdir)/MOL2mol.sh: MOL2mol.sh.in
	sed 's/@inst_bindir@/$(subst /,\/,$(inst_bindir))/' $< > $@
	chmod 755 $@

$(scriptdir)/turbo2mol.py: turbo2mol.py.in
	sed 's/@inst_bindir@/$(subst /,\/,$(inst_bindir))/; s/@inst_libdir@/$(subst /,\/,$(inst_libdir))/; s/@python_bin@/$(PYTHON_BIN)/' $< > $@
	chmod 755 $@

$(libdir)/%.py: %.py
	cp -f $< $@


